{
  "extends": "tslint:recommended",
  "rules": {
    "interface-name": false,
    "radix": false,
    "max-line-length": {
      "options": [
        120
      ]
    },
    "max-classes-per-file": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}
